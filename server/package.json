    "@fastify/swagger-ui": "^1.9.3",
    "@prisma/client": "^5.1.1",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "dropbox": "^10.34.0",
    "fastify": "^4.19.1",
    "jsonwebtoken": "^9.0.1",
    "mailgun.js": "^9.2.0",
    "nodemailer": "^6.9.4",
    "tsc": "^2.0.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^1.3.0",
